<div class="modal__poster">
    <img class="modal__poster-img" src="{{imgSrc}}" alt="{{title}} poster" />
</div>
<div class="modal__descr">
    <h2 class="modal__descr-title">{{title}}</h2>
    <div class="modal__list-position">
        <ul class="list modal__descr-list--static">
            <li class="modal__descr-details">Vote / Votes</li>
            <li class="modal__descr-details">Popularity</li>
            <li class="modal__descr-details">Original Title</li>
            <li class="modal__descr-details">Genre</li>
        </ul>
        <ul class="list modal__descr-list--values">
            <li class="modal__descr-item">
                <span class="modal__descr-vote">{{rating}}</span>
                <span class="modal__descr-separator">/</span>
                <span class="modal__descr-votes">{{votes}}</span>
            </li>
            <li class="modal__descr-item">{{popularity}}</li>
            <li class="modal__descr-item modal__descr-item--title">
                {{title}}
            </li>
            <li class="modal__descr-item">{{genres}}</li>
        </ul>
    </div>
    <h3 class="modal__descr-subtitle">ABOUT</h3>
    <p class="modal__descr-info">
        {{about}}
    </p>
</div>